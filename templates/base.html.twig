<!DOCTYPE html>
<html ng-app="myApp">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}




        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

    <div style="float:right">

        Panier contient : {{ nbCartProduct }} produits

        <ul>
            {% for product in productsInCart %}
                <li>{{ product.name }}</li>
            {% endfor %}
        </ul>

    </div>

    {% include "_parts/menu.html.twig" %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}


        {% block body %}{% endblock %}
    </body>
</html>
