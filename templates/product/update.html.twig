    {{ form_end(form) }}

<hr />

<h3>Ajouter une couleur à ce produit</h3>

    <form action="{{ path("product_add_color",{id:product.id}) }}" method="post">
        <label>Choix de la couleur</label>
        <select name="color_id">
{% for color in colors %}
    <option value="{{ color.id }}">{{ color.name }}</option>
            {% endfor %}
        </select>
        <button type="submit">Ajouter cette couleur à ce produit</button>

    </form>

{% endblock %}
